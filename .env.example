# App
APP_NAME=Redteam AI Assist
APP_ENV=dev
API_HOST=0.0.0.0
API_PORT=8088

# LLM provider: mock | openai | groq
LLM_PROVIDER=mock
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=
OPENAI_API_KEY=
GROQ_API_KEY=

# RAG embeddings (prioritize hosted free HF inference)
HF_TOKEN=
HF_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_SOURCE_DIR=data/rag/knowledge_base
RAG_INDEX_PATH=data/rag/index/index.jsonl
RAG_TOP_K=4
RAG_CHUNK_SIZE=1200

# Session and policy
MAX_EVENTS_PER_SESSION=600
ALLOWED_TOOLS=curl,wget,httpx,whatweb,nikto,ffuf,gobuster,feroxbuster,dirsearch,sqlmap,hydra,python,python3,bash,sh
BLOCKLIST_PATTERNS=rm -rf,shutdown,reboot,powershell Remove-Item,format c:,mkfs,dd if=,sudo ,chmod ,chown ,useradd,usermod,passwd ,iptables,ufw ,systemctl,service 

# MVP++ caches (optional)
CACHE_DIR=runtime/cache
EMBEDDING_CACHE_DB=runtime/cache/embeddings.sqlite
EMBEDDING_CACHE_TTL_DAYS=30
EMBEDDING_CACHE_MAX_ENTRIES=50000
