# App
APP_NAME=Redteam AI Assist
APP_ENV=dev
API_HOST=0.0.0.0
API_PORT=8088

# LLM provider: mock | openai | groq
LLM_PROVIDER=mock
LLM_MODEL=gpt-4o-mini
LLM_BASE_URL=
OPENAI_API_KEY=
